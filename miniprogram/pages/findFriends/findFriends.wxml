<van-notice-bar
  text="此页面用于按“省市区”查找未在地图上显示的朋友"
  mode="closeable"
  color="rgb(25, 137, 250)"
  background="rgb(236, 249, 255) none repeat scroll 0% 0%;"
  left-icon="//img.yzcdn.cn/public_files/2017/8/10/6af5b7168eed548100d9041f07b7c616.png"
/>
<view class="section">
  <view class="infoAddOn">
    <image src="../../images/select.png" style="width:25px;height:25px;margin:5px"></image>
    <view class="section__title InfoAddOn-field">请选择朋友所在省市区</view>
  </view>
  <view class="infoAddOn">
    <image src="../../images/selected.png" style="width:25px;height:25px;margin:5px;"></image>
    <picker class="InfoAddOn-field" mode="region" bindchange="bindRegionChange" value="{{region}}" custom-item="{{customItem}}">
    <view class="picker">
      当前选择：{{region[0]}}，{{region[1]}}，{{region[2]}}
    </view>
  </picker>
  <!-- <image src="../../images/select.png" style="width:25px;height:25px;margin:5px"></image> -->
  </view>
</view>
<van-divider hairline />
