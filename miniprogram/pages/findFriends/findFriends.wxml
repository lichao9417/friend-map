  <van-icon name="chat" />
  <van-divider hairline />
</view> -->

<view wx:for="{{friendList}}"  wx:key="_id">
  <view class="infoAddOn" data-latitude="{{item.location.latitude}}" 
            data-longitude="{{item.location.longitude}}">
    <image src="../../images/userInfo.png" style="width:25px;height:25px" ></image>
    <text class="InfoAddOn-field-name" style="text-align:center">{{item.name}}</text>
    <!-- <text class="InfoAddOn-field-address" style="text-align:right">{{item.address}}</text>
    <image src="../../images/location-info.png" style="width:25px;height:25px" ></image> -->
  </view>
  <van-divider hairline />
</view>

<view wx:if="{{empty}}">
  <van-empty image="search" description="所选地区未找到好友" />
</view>